{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types" : [],
    "baseUrl": ".",
    "lib": ["ESNext", "dom", "dom.iterable"],
    "paths": {
      "/@/*": [
        "./src/*"
      ],
      "/@cmp/*": [
        "./src/components/*"
      ],
      "/@common/*": [
        "../common/*"
      ]
    }
  },
  "include": [
    "./vite.config.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "../common/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}
